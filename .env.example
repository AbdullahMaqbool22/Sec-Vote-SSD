# Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://secvote:secvote_pass@localhost:5432/secvote_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-change-in-production

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Service URLs (for local development)
AUTH_SERVICE_URL=http://localhost:5001
POLL_SERVICE_URL=http://localhost:5002
VOTE_SERVICE_URL=http://localhost:5003
RESULTS_SERVICE_URL=http://localhost:5004

# PostgreSQL Configuration
POSTGRES_USER=secvote
POSTGRES_PASSWORD=secvote_pass
POSTGRES_DB=secvote_db
